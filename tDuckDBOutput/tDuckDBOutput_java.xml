<?xml version="1.0" encoding="UTF-8"?>
<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="1.0" STATUS="PROD" COMPATIBILITY="ALL" AUTHOR="ESDB" RELEASE_DATE="20251209" STARTABLE="false" LOG4J_ENABLED="true">
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>ESDB/DuckDB</FAMILY>
    <FAMILY>Databases</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="1" MAX_OUTPUT="0"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_OK" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="RUN_IF" MAX_INPUT="1" MAX_OUTPUT="1"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK" NUM_ROW="5" GROUP="CONNECTION">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CONNECTION_COMPONENT" FIELD="COMPONENT_LIST" REQUIRED="true" NUM_ROW="5" GROUP="CONNECTION" SHOW_IF="USE_EXISTING_CONNECTION == 'true'" FILTER="tDuckDBConnection">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="DB_PATH" FIELD="FILE" NUM_ROW="10" GROUP="CONNECTION" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
      <DEFAULT>"my_database.duckdb"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="TABLE" FIELD="TEXT" NUM_ROW="20" REQUIRED="true" GROUP="TABLE_CONFIG">
      <DEFAULT>"my_table"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="TABLE_ACTION" FIELD="CLOSED_LIST" NUM_ROW="25" GROUP="TABLE_CONFIG">
      <ITEMS DEFAULT="NONE">
        <ITEM NAME="NONE" VALUE="NONE"/>
        <ITEM NAME="CREATE_IF_NOT_EXISTS" VALUE="CREATE_IF_NOT_EXISTS"/>
        <ITEM NAME="DROP_CREATE" VALUE="DROP_CREATE"/>
        <ITEM NAME="TRUNCATE" VALUE="TRUNCATE"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="DATA_ACTION" FIELD="CLOSED_LIST" NUM_ROW="30" GROUP="DATA_CONFIG">
      <ITEMS DEFAULT="INSERT">
        <ITEM NAME="INSERT" VALUE="INSERT"/>
        <ITEM NAME="INSERT_OR_REPLACE" VALUE="INSERT_OR_REPLACE"/>
        <ITEM NAME="INSERT_OR_IGNORE" VALUE="INSERT_OR_IGNORE"/>
        <ITEM NAME="UPDATE" VALUE="UPDATE"/>
        <ITEM NAME="DELETE" VALUE="DELETE"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="KEY_COLUMNS" FIELD="TEXT" NUM_ROW="35" GROUP="DATA_CONFIG" SHOW_IF="(DATA_ACTION == 'UPDATE') OR (DATA_ACTION == 'DELETE') OR (DATA_ACTION == 'INSERT_OR_REPLACE')">
      <DEFAULT>""</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" NUM_ROW="40" REQUIRED="true">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="50" GROUP="ERROR_HANDLING">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
  </PARAMETERS>

  <ADVANCED_PARAMETERS>
    <PARAMETER NAME="BATCH_SIZE" FIELD="TEXT" NUM_ROW="10" GROUP="PERFORMANCE">
      <DEFAULT>1000</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="USE_BATCH" FIELD="CHECK" NUM_ROW="10" GROUP="PERFORMANCE">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="DEBUG_MODE" FIELD="CHECK" NUM_ROW="20" GROUP="DEBUG">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="DuckDB-Driver" MODULE="duckdb_jdbc-1.0.0.jar" MVN="mvn:org.duckdb/duckdb_jdbc/1.0.0" REQUIRED="true"/>
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_INSERTED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_UPDATED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="NB_LINE_DELETED" TYPE="id_Integer" AVAILABILITY="AFTER"/>
  </RETURNS>
</COMPONENT>
