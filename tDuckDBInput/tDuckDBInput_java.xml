<?xml version="1.0" encoding="UTF-8"?>
<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="1.0" STATUS="PROD" COMPATIBILITY="ALL" AUTHOR="ESDB" RELEASE_DATE="20251209" STARTABLE="true" LOG4J_ENABLED="true">
    <SIGNATURE/>
  </HEADER>

  <FAMILIES>
    <FAMILY>ESDB/DuckDB</FAMILY>
    <FAMILY>Databases</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL/>
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="ITERATE" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="0" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_OK" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_ERROR" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="RUN_IF" MAX_INPUT="1" MAX_OUTPUT="1"/>
  </CONNECTORS>

  <PARAMETERS>
    <PARAMETER NAME="USE_EXISTING_CONNECTION" FIELD="CHECK" NUM_ROW="5" GROUP="CONNECTION">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CONNECTION_COMPONENT" FIELD="COMPONENT_LIST" REQUIRED="true" NUM_ROW="5" GROUP="CONNECTION" SHOW_IF="USE_EXISTING_CONNECTION == 'true'" FILTER="tDuckDBConnection">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="DB_PATH" FIELD="FILE" NUM_ROW="10" GROUP="CONNECTION" SHOW_IF="USE_EXISTING_CONNECTION == 'false'">
      <DEFAULT>":memory:"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="QUERY_TYPE" FIELD="CLOSED_LIST" NUM_ROW="20" GROUP="QUERY">
      <ITEMS DEFAULT="TABLE">
        <ITEM NAME="TABLE" VALUE="TABLE"/>
        <ITEM NAME="QUERY" VALUE="QUERY"/>
      </ITEMS>
    </PARAMETER>

    <PARAMETER NAME="TABLE_NAME" FIELD="TEXT" NUM_ROW="25" GROUP="QUERY" SHOW_IF="QUERY_TYPE == 'TABLE'">
      <DEFAULT>"my_table"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="QUERY" FIELD="MEMO_SQL" NUM_ROW="30" NB_LINES="6" GROUP="QUERY" SHOW_IF="QUERY_TYPE == 'QUERY'">
      <DEFAULT>"SELECT * FROM my_table"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" NUM_ROW="40" REQUIRED="true">
      <DEFAULT/>
    </PARAMETER>

    <PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="50" GROUP="ERROR_HANDLING">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
  </PARAMETERS>

  <ADVANCED_PARAMETERS>
    <PARAMETER NAME="TRIM_COLUMNS" FIELD="CHECK" NUM_ROW="10" GROUP="OPTIONS">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="DEBUG_MODE" FIELD="CHECK" NUM_ROW="20" GROUP="DEBUG">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="DuckDB-Driver" MODULE="duckdb_jdbc-1.0.0.jar" MVN="mvn:org.duckdb/duckdb_jdbc/1.0.0" REQUIRED="true"/>
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
    <RETURN NAME="QUERY" TYPE="id_String" AVAILABILITY="AFTER"/>
  </RETURNS>
</COMPONENT>
