<?xml version="1.0" encoding="UTF-8"?>
<COMPONENT>
	<HEADER
		PLATEFORM="ALL"
		SERIAL=""
		VERSION="1.0"
		STATUS="ALPHA"
		COMPATIBILITY="ALL"
		AUTHOR="ESDB/Query.Farm"
		RELEASE_DATE="20251207"
		STARTABLE="true"
		LOG4J_ENABLED="true"
		HAS_CONDITIONAL_OUTPUTS="false"
		DATA_AUTO_PROPAGATE="false"
		SCHEMA_AUTO_PROPAGATE="false"
	>
		<SIGNATURE/>
	</HEADER>

	<FAMILIES>
		<FAMILY>ESDB/DuckDB</FAMILY>
		<FAMILY>Messaging/Kafka</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL/>
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
		<CONNECTOR CTYPE="ITERATE" MAX_INPUT="0" MAX_OUTPUT="0"/>
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="0" MAX_OUTPUT="1"/>
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="0" MAX_OUTPUT="1"/>
		<CONNECTOR CTYPE="COMPONENT_OK"/>
		<CONNECTOR CTYPE="COMPONENT_ERROR"/>
		<CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="BOOTSTRAP_SERVERS" FIELD="TEXT" NUM_ROW="10" REQUIRED="true">
			<DEFAULT>"localhost:9092"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SECURITY_PROTOCOL" FIELD="CLOSED_LIST" NUM_ROW="15">
			<ITEMS DEFAULT="PLAINTEXT">
				<ITEM NAME="PLAINTEXT" VALUE="PLAINTEXT"/>
				<ITEM NAME="SSL" VALUE="SSL"/>
				<ITEM NAME="SASL_PLAINTEXT" VALUE="SASL_PLAINTEXT"/>
				<ITEM NAME="SASL_SSL" VALUE="SASL_SSL"/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="SASL_MECHANISM" FIELD="CLOSED_LIST" NUM_ROW="20" SHOW_IF="(SECURITY_PROTOCOL == 'SASL_PLAINTEXT' OR SECURITY_PROTOCOL == 'SASL_SSL')">
			<ITEMS DEFAULT="PLAIN">
				<ITEM NAME="PLAIN" VALUE="PLAIN"/>
				<ITEM NAME="SCRAM-SHA-256" VALUE="SCRAM-SHA-256"/>
				<ITEM NAME="SCRAM-SHA-512" VALUE="SCRAM-SHA-512"/>
				<ITEM NAME="GSSAPI" VALUE="GSSAPI"/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="SASL_USERNAME" FIELD="TEXT" NUM_ROW="25" SHOW_IF="(SECURITY_PROTOCOL == 'SASL_PLAINTEXT' OR SECURITY_PROTOCOL == 'SASL_SSL')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SASL_PASSWORD" FIELD="PASSWORD" NUM_ROW="25" SHOW_IF="(SECURITY_PROTOCOL == 'SASL_PLAINTEXT' OR SECURITY_PROTOCOL == 'SASL_SSL')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="SSL_CA_LOCATION" FIELD="FILE" NUM_ROW="10" SHOW_IF="(SECURITY_PROTOCOL == 'SSL' OR SECURITY_PROTOCOL == 'SASL_SSL')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SSL_CERT_LOCATION" FIELD="FILE" NUM_ROW="15" SHOW_IF="(SECURITY_PROTOCOL == 'SSL' OR SECURITY_PROTOCOL == 'SASL_SSL')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SSL_KEY_LOCATION" FIELD="FILE" NUM_ROW="20" SHOW_IF="(SECURITY_PROTOCOL == 'SSL' OR SECURITY_PROTOCOL == 'SASL_SSL')">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="EXTRA_KAFKA_PROPERTIES" FIELD="TABLE" NUM_ROW="30" NB_LINES="3">
			<ITEMS>
				<ITEM NAME="PROPERTY_KEY" FIELD="TEXT"/>
				<ITEM NAME="PROPERTY_VALUE" FIELD="TEXT"/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="DEBUG_MODE" FIELD="CHECK" NUM_ROW="40">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="DuckDB-Driver" MODULE="duckdb_jdbc-0.9.2.jar" MVN="mvn:org.duckdb/duckdb_jdbc/0.9.2" REQUIRED="true"/>
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="CONNECTION_OK" TYPE="id_Boolean" AVAILABILITY="AFTER"/>
		<RETURN NAME="ERROR_MESSAGE" TYPE="id_String" AVAILABILITY="AFTER"/>
	</RETURNS>
</COMPONENT>
